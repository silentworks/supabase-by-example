{
	"name": "sveltekit-supabase-by-example",
	"private": true,
	"scripts": {
		"dev": "concurrently \"npm run dev:css\" \"vite dev\"",
		"dev:css": "tailwindcss -w -i ./src/tailwind.css -o static/app.css",
		"build": "npm run build:css && vite build",
		"build:css": "tailwindcss -m -i ./src/tailwind.css -o static/app.css",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"s:start": "supabase start",
		"s:stop": "supabase stop"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/tcp-port-used": "^1.0.4",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"autoprefixer": "^10.4.23",
		"concurrently": "^8.2.2",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.45.1",
		"postcss": "^8.5.6",
		"postgres": "^3.4.8",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"supabase": "2.72.8",
		"svelte": "^5.46.4",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^3.4.19",
		"tcp-port-used": "^1.0.2",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^5.4.21",
		"vitest": "^1.6.1"
	},
	"type": "module",
	"dependencies": {
		"@supabase/ssr": "^0.8.0",
		"@supabase/supabase-js": "^2.90.1",
		"daisyui": "^2.52.0",
		"just-safe-get": "^4.2.0",
		"zod": "^3.25.76"
	},
	"trustedDependencies": [
		"supabase"
	]
}
